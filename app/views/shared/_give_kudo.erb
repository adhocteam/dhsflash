<div data-sticky-container class="hide-for-small-only">
<div class="row" id="quick-kudos"  data-sticky data-options="marginTop:0;" style="width:100%">
  <div class="small-12 columns">
    <div class="row">
      <div class="small-3 columns">To</div>
      <div class="small-9 columns">For</div>
    </div>
    <div class="row">
      <div class="small-3 columns">
        <%= form_for(Kudo.new, url: kudos_path, remote: true) do |f| %>
          <%= f.select :recipient_id, User.select(:username, :id).where.not(id: current_user.id).collect { |p| [ p.username, p.id ] }, { include_blank: true }, required: true %>
      </div>
      <div class="small-7 columns">
        <%= f.text_field :message, autofocus: true, class: 'input-group-field', required: true %>
      </div>
      <div class="small-2 columns">
          <div class="input-group-button">
            <%= f.submit "Post Kudo", class: 'button success' %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>

