<div class="row">
  <div class="small-12 columns">
    <div class="callout kudo-card" id="kudo-<%= kudo.id %>">
      <div class="row">
        <div class="small-3 columns">
          <%= render partial: 'shared/user_avatar', locals: { user: kudo.recipient } %>
        </div>
        <div class="small-9 columns">
          <div class="row">
            <div class="small-12 columns">
              <div class="recipient-info">
                <h5>
                  <%= link_to(kudo.recipient.name, user_path(kudo.recipient)) %>
                </h5>
                <span class="title"><%= kudo.recipient.title %></span>
              </div>
              <blockquote><%= kudo.message %></blockquote>
            </div>
          </div>
          <div class="row">
            <div class="small-12 columns">
              <div class="float-left">
                <i class="fi-torso"></i>
                <%= link_to(kudo.creator.name, user_path(kudo.creator)) %>
                <%= distance_of_time_in_words_to_now(kudo.created_at) %> ago
              </div>
              <div class="controls float-right">
                <%= render partial: 'shared/kudo_flag_inappropriate', locals: { kudo: kudo } %>
                <%= render partial: 'shared/kudo_thumbs_up', locals: { kudo: kudo } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
