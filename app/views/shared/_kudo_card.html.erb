<div class="row">
  <div class="small-12 columns">
    <div class="callout kudo-card <%= 'current-user-kudo' if current_user.id == kudo.recipient.try(:id) %>" id="kudo-<%= kudo.id %>">
      <div class="row">
        <div class="small-3 columns">
          <%= render partial: 'shared/user_avatar', locals: { user: kudo.recipient } %>
        </div>
        <div class="small-9 columns">
          <div class="row">
            <div class="small-12 columns">
              <div class="recipient-info">
                <h5>
                  <% if kudo.recipient %>
                    <%= link_to(kudo.recipient.name, user_path(kudo.recipient)) %>
                  <% else %>
                    <%= kudo.recipient_email %>
                  <% end %>
                </h5>
                <% if kudo.recipient %>
                  <span class="title"><%= kudo.recipient.title %></span>
                <% end %>
              </div>
              <blockquote><%= kudo.message %></blockquote>
              <% if kudo.attachment? %>
                <p>ðŸ“Ž <%= link_to(kudo.attachment_identifier, kudo.attachment.url, target: "_blank") %></p>
              <% end %>
            </div>
          </div>
          <div class="row">
            <div class="small-12 columns">
              <div class="float-left">
                <i class="fi-torso"></i>
                <%= link_to(kudo.creator.name, user_path(kudo.creator)) %>
                <%= distance_of_time_in_words_to_now(kudo.created_at) %> ago
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
